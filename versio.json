{
    "version": "0.1.0-BETA.2",
    "strategies": [
        {
            "type": "expression",
            "options": {
                "directories": [
                    "src"
                ],
                "pattern": "Application.php",
                "expression": "version = '{{SEMVER}}';",
                "replacement": "version = '{{VERSION}}';"
            }
        }
    ],
    "workflow": {
        "places": [
            "BETA"
        ],
        "transitions": {
            "MASTER": [
                "BETA"
            ],
            "BETA": [
                "BETA",
                "RELEASE"
            ]
        }
    }
}